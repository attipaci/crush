<project name="crush" default="createjar">    
  <property name="projectHome" location="." />
  <target name="createjar">
    <jar 
	destfile="${projectHome}/crush2.jar" 
	basedir="${projectHome}/bin"
	includes="**/*.class" 
	excludes="**/tools/*,**/ebex/*,**/test/*,**/devel/*,**/TODO*,**/*~,**/.*" 
	index="true"
	level="9" 
    />
    <jar 
	destfile="${projectHome}/crush2-src.jar" 
	basedir="${projectHome}/src"
	includes="**/*.java" 
	excludes="**/tools/*,**/ebex/*,**/test/*,**/devel/*,**/TODO*,**/*~,**/.*" 
	index="true"
	level="9" 
    />
  </target>    
</project>
